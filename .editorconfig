root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 120

[*.txt,*.js,*.css,*.html,*.yml,*.yaml]
indent_style = space
indent_size = 2
line_length = 120

[*.py]
indent_style = space
indent_size = 4
line_length = 120

[Makefile]
indent_style = tab

[*.md, *.rst]
indent_style = space
indent_size = 4
